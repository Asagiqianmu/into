
  <view class="page">
    <view class="page-list">
      <view class="page-item"  wx:for="{{list}}" wx:key="{{index}}" bindtap="link" data-wpylink-a="{{item.id}}">
        <view class="page-item-hd">
          <image class="img" src="https://api.yingtong-pm.cn{{item.imageUrl}}"/>
        </view>
        <view class="page-item-bd">
          <text>{{item.mainBusiness}}</text>
        </view>
        <view class="page-item-ft">
          <view class="name" style="color:{{btncolor}}">
            <text>{{item.companyName}}</text>
          </view>
          <view class="contact">
            <view>{{item.telephone}}</view>
            <view>{{item.address}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>